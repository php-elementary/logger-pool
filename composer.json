{
    "name":         "elementary/logger-pool",
    "description":  "The pool of different loggers wich impliments \\PSR\\Log\\LoggerInterface",
    "license":      "MIT",
    "authors": [
        {
            "name":  "Artiom Vendelev",
            "email": "artiom@vendelev.ru",
            "role":  "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "elementary\\logger\\pool\\": "src\\"
        }
    },
    "require": {
        "php": ">=5.6",
        "elementary/singleton": "^1.0",
        "psr/log": "^1.0"
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^5",
        "satooshi/php-coveralls": "^2.0"
    },
    "suggest": {
        "elementary/graylog-udp": "The wrapper to send log-message to a Graylog server using the UDP transport"
    }
}
